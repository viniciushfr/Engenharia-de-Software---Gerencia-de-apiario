@model IEnumerable<Apiario.Models.Apiario>
@{
    ViewBag.Title = "Vizualizar Apiário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vizualizar Apiário</h2>

<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.localizacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantasVezes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hora)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.localizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantasVezes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hora)
            </td>
            <td>
                <a href="/Cliente/Monitoramento?idApiario=@item.idApiario" class="btn btn-warning"><i class="fa fa-eye" aria-hidden="true"></i></a>
            </td>
        </tr>
    }


</table>


