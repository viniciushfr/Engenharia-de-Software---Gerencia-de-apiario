@model IEnumerable<Apiario.Models.Caixa>
@{
    ViewBag.Title = "VisualizarCaixas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Caixas</h2>
<hr />
<div class="row">
    @foreach (var caixa in Model)
    {

        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="thumbnail">
                <div class="caption">
                    <h3>Caixa @Html.DisplayFor(modelItem => caixa.idCaixa) </h3>
                    <p>
                        @if (caixa.conexao)
                        {
                            <h4>Conectado</h4>
                        }
                        else
                        {
                            <h4>Desconectado</h4>
                        }
                    </p>
                    <p>
                        @caixa.situacao
                    </p>
                    <p><a href="MonitorarCaixas?idCaixa=@caixa.idCaixa" class="btn btn-primary" role="button">Dados da Caixa</a> </p>
                </div>
            </div>
        </div>

    }
</div>
<br />
<div>
    <a href="Monitoramento?idApiario=@ViewBag.idApiario" class="btn btn-info" role="button">Voltar</a>
</div>