@model IEnumerable<Apiario.Models.DadosApiario>
@{
    ViewBag.Title = "Monitoramento";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<h2>Monitoramento</h2>

<table class="table table-responsive">
    <tr>
        <th>
           Data
        </th>
        <th>
            Temperatura
        </th>
        <th>
            Umidade
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dataDadosApiario) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.temperatura) Cº
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.umidade) %
            </td>
            
        </tr>
    }


</table>
<a href="VisualizarCaixas?idApiario=@ViewBag.idApiario" class="btn btn-primary" >Caixas</a>